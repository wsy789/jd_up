        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>-->

    <TextView
        android:id="@+id/list_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55555555"
        android:textColor="@color/back"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/list_video"
        app:layout_constraintLeft_toLeftOf="@+id/list_video"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/list_column_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55555555"
        android:textColor="@color/subtitle"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/list_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/list_video"/>
